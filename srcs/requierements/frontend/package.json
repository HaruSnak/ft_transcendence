{
  "name": "frontend",
  "version": "1.0.0",
  "type": "module",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "concurrently": "^8.0.0",
    "esbuild": "^0.19.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "socket.io-client": "^4.8.1"
  },
  "scripts": {
    "dev": "concurrently \"npx esbuild src/index.ts --bundle --outfile=public/js/index.js --format=esm --watch\" \"npm run watch-css\"",
    "build": "npx esbuild src/index.ts --bundle --outfile=public/js/index.js --format=esm",
    "build-css": "tailwindcss -i ./src/style.css -o ./public/css/index.css",
    "watch-css": "tailwindcss -i ./src/style.css -o ./public/css/index.css --watch"
  },
